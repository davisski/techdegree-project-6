extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
    
      h1 Let`s create something awesome!
 
      p.lead.text-light
        | So far created projects during teamtreehouse Full Stack Javascript Student degree.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects

        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls.main}`)
            h5= project.project_name
      
